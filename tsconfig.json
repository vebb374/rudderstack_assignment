{
    "compilerOptions": {
        "target": "ES2022",
        "module": "ES2022",
        "moduleResolution": "node",
        "strict": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "outDir": "./dist",
        "baseUrl": ".",
        "paths": {
            "@test-data/*": [
                "test-data/*"
            ],
            "@shared/*": [
                "features/shared/*"
            ],
            "@features/*": [
                "features/*"
            ]
        }
    },
    "include": [
        "features/**/*.ts",
        "test-data"
    ],
    "exclude": [
        "node_modules"
    ]
}